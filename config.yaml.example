# PythonAnywhere Git Pipeline Configuration
# Copy this file to config.yaml and fill in your credentials

pythonanywhere:
  # Your PythonAnywhere username
  username: "your_username_here"
  
  # Your PythonAnywhere API token
  # Get this from: https://www.pythonanywhere.com/user/yourusername/account/#api_token
  token: "your_api_token_here"
  
  # Your PythonAnywhere domain
  # Usually: yourusername.pythonanywhere.com
  host: "your_domain.pythonanywhere.com"

# Optional: Project-specific settings
projects:
  my_project:
    path: "/home/yourusername/myproject"
    repository: "https://github.com/yourusername/myproject.git"
    branch: "main"
  
  another_project:
    path: "/home/yourusername/anotherproject"
    repository: "https://github.com/yourusername/anotherproject.git"
    branch: "develop"
